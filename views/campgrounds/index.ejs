<% layout('layout/boilerplate') -%>
<div id="cluster-map"></div>
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Add Campground</a>
    </div>

    <% for(const campground of campgrounds) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(campground.images.length) { %>
                    <img src="<%= campground.images[0].url %>" alt="" class="img-fluid" crossorigin="anonymous">
                    <% } else { %>
                        <img src="https://res.cloudinary.com/dvwri8zij/image/upload/v1732384140/YelpCamp/c1oahqdvtlk9gi4ewq47.avif" alt="" class="img-fluid" crossorigin="anonymous">
                        <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.title %></h5>
                        <p class="card-text"><%= campground.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= campground.location %></small>
                        </p>
                        <a href=<%= `/campgrounds/${campground._id}` %> class="btn btn-primary"><%= campground.title %></a>
                    </div>
                </div>
            </div>
        </div>
       <% } %>

<script>
    const mapBoxToken = '<%- process.env.MAPBOX_TOKEN %>'
    const strCampgrounds = <%- JSON.stringify(campgrounds) %>;
    const allCampgrounds = { features : strCampgrounds}
</script>
<script src="/javascripts/clusterMap.js"></script>
 
