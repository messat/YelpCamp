<% layout('layout/boilerplate') -%>
    <h1>Edit Campground</h1>
    <form action=<%=  `/campgrounds/${findCampgroundById._id}?_method=PUT` %> method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="campground[title]" value="<%= findCampgroundById.title %>" style="width: 300px;">
        </div>
        <br>
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="campground[location]" value="<%= findCampgroundById.location %>" style="width: 300px;">
        </div>
        <button>Update Campground</button>
    </form>
    <a href=<%= `/campgrounds/${findCampgroundById._id}` %>><--Back to <%= findCampgroundById.title %></a>
